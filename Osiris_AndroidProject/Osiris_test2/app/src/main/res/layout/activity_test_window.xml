<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_8sdp">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imageStartTest"
        android:layout_width="59dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/primary"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_complited_test_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />


    <View
        android:id="@+id/viewSupporter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/imageStartTest"
        app:layout_constraintStart_toEndOf="@id/imageStartTest"
        app:layout_constraintTop_toTopOf="@id/imageStartTest"/>

    <TextView
        android:id="@+id/textNameTest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toTopOf="@+id/viewSupporter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageStartTest" />
    <TextView
        android:id="@+id/textDurationTest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/viewSupporter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageStartTest" />

</androidx.constraintlayout.widget.ConstraintLayout>